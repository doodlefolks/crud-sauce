
div#accordion
  each hood in pageData.hoods
    h3=hood.name
    div.places.container
      div.placeOverflow
        each place in hood.places
          summary.place
              input(type='hidden' class='placeLat' value=place.lat)
              input(type='hidden' class='placeLong' value=place.long)
              input(type='hidden' class='name'
              value=place.name)
              h4 #{place.name}
              h6 #{place.category}
              div#placeDesc "#{place.description}"
              details
                | #{place.address} <br>
                | (206) #{place.phone}
              a(href='/places/' + place.id)#reviewsLink Reviews

script(src="/javascript/accordion-map.js")
